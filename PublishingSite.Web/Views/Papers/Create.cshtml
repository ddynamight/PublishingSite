<div class="container-fluid">
     @using (Html.BeginForm("Create", "Papers", FormMethod.Post, new { enctype = "multipart/form-data" }))
     {
          @Html.AntiForgeryToken()
          @Html.ValidationSummary(true)


          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="form-group">
                    <label for="titleTb">Paper Title <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="titleTb" name="Title" placeholder="Paper Title e.g. Computer Science In the Diaspora" type="text" />
               </div>

               <div class="form-group">
                    <label for="keywordsTb">Keywords <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="keywordsTb" name="Keywords" placeholder="Engineering, Something Here" type="text" />
               </div>

               <div class="form-group">
                    <label for="prevSubmittedTb">Previously Submitted Somewhere? Provide Entity Name <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="prevSubmittedTb" name="PrevSubmission" placeholder="Some Where Academic Journal" type="text" />
               </div>

               <div class="form-group">
                    <label for="fundingBodyTb">Research Funding Body <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="fundingBodyTb" name="FundingBody" placeholder="Some Big Company Name" type="text" />
               </div>
          </div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="form-group">
                    <label for="detailsTb">Paper Abstract <span class="glyphicon glyphicon-question-sign"></span></label>

                    @Html.TextArea("Abstract", new { @class = "form-control", id = "detailsTb", placeholder = "Article e.g. This is course has or will serve...", rows = "6" })
               </div>
          </div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="form-group">
                    <label for="detailsTb">Select an Image to Respresent this Course <span class="text-danger">Recommended Size (1400 X 400)</span> <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input accept="file/*" class="form-control" type="file" id="file" name="file" draggable="true" />
               </div>
          </div>
          
          <br />

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
               <p>
                    <button type="submit" class="btn btn-lg btn-unique"><span class="glyphicon glyphicon-floppy-save"></span> Add Paper</button>
               </p>
          </div>

     }
</div>


<script>
    $(function () {
         $('#abstractTb').ckeditor();
     });
</script>