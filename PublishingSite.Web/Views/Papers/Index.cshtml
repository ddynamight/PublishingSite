@model IEnumerable<PublishingSite.Model.Paper>

@{
    ViewData["Title"] = "Papers";
}




<div id="innerCon">
     <div class="container-fluid">
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
               <h2>All Papers</h2>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
               <a href="#" title="Add Paper" type="button" data-toggle="modal" data-target="#createModal"><span class="fa fa-edit"></span> Add Paper</a>
          </div>
          <table class="table table-responsive">
               <thead>
                    <tr>
                         <th>

                         </th>
                         <th>Paper Title</th>
                         <th>
                              File Name
                         </th>
                         <th>
                              Date Submitted
                         </th>
                         <th>
                              Submitted By
                         </th>
                    </tr>
               </thead>
               <tbody>
                    @foreach (var item in Model)
                    {
                         <tr>
                              <td>

                              </td>
                              <td>
                                   @item.Title
                              </td>
                              <td>
                                   @item.PaperUrl
                              </td>
                              <td>
                                   @item.Date
                              </td>
                              <td>
                                   @item.AppUser.Firstname @item.AppUser.Lastname 
                              </td>
                         </tr>
                    }
               </tbody>
          </table>
     </div>
</div>



<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
     <div class="modal-dialog" role="document">
          <div class="modal-content">
               <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"><span class="fa fa-book"></span> Add Course</h4>
               </div>
               <div class="modal-body">
                    @await Html.PartialAsync("Create")
               </div>
               <div class="modal-footer">
               </div>
          </div>
     </div>
</div>